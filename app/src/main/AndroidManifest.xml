<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saurov.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcherfinal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcherfinal"
        android:supportsRtl="true"
        tools:replace="android:icon"
        android:name="com.saurov.android.StApp"
        android:theme="@style/AppTheme">

        <meta-data android:name="DATABASE" android:value="appdb.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.saurov.android" />


        <activity android:name="com.saurov.android.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.saurov.android.activities.MedicationActivity" />
        <activity android:name="com.saurov.android.activities.AddMedicationActivity"></activity>
    </application>

</manifest>