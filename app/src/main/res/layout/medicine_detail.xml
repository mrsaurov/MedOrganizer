<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="67dp"
            android:background="@drawable/medicine_icon2"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/medicineNameFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            tools:text="Medicine Name"
            android:padding="20dp"
            android:textColor="@color/myBlueText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="20dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Start Date:"
            android:textColor="@color/myBlueText"/>

        <TextView
            android:id="@+id/startDateFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="16.05.17"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="20dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Start Time:"
            android:textColor="@color/myBlueText"/>

        <TextView
            android:id="@+id/startTimeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="4.00 AM"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="20dp">


        <ImageButton
            android:id="@+id/deleteImageButtonFragment"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/recycle_bin_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="30dp"/>

        <ImageButton
            android:id="@+id/editImageButtonFragment"
            android:layout_width="54dp"
            android:layout_height="56dp"
            android:layout_weight="0.03"
            android:background="@drawable/edit_image_button"
        />

    </LinearLayout>


</LinearLayout>