<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="67dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/medicine_icon2"
            android:padding="5dp" />

        <TextView
            android:id="@+id/medicineNameFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@color/myBlueText"
            android:textSize="30sp"
            tools:text="Medicine Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminders On: "
            android:textColor="@color/myBlueText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/daysToTakeMedFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="kjabsjdsjdsajkds"/>

        <!--<TextView-->
            <!--android:id="@+id/startDateFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="15dp"-->
            <!--tools:text="16.05.17"/>-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Times: "
            android:textColor="@color/myBlueText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/remiderTimeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="4.00 AM" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/deleteImageButtonFragment"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/recycle_bin_icon_red" />

        <ImageButton
            android:id="@+id/editImageButtonFragment"
            android:layout_width="54dp"
            android:layout_height="56dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.03"
            android:background="@drawable/edit_image_button"/>

        <ImageButton
            android:id="@+id/historyImageButtonFragment"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/history" />

    </LinearLayout>


</LinearLayout>