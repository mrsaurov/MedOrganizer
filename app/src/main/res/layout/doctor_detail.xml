<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/doctorNameFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/myBlueText"
        android:textSize="30sp"
        tools:text="Doctor Name" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speciality: "
            android:textColor="@color/myBlueText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/doctorSpecialityFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="kjabsjdsjdsajkds" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No: "
            android:textColor="@color/myBlueText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/doctorContactNoFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="kjabsjdsjdsajkds" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@color/myBlueText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/doctorEmailFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="kjabsjdsjdsajkds" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address "
            android:textColor="@color/myBlueText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/doctorAdressFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="4.00 AM" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/deleteImageButtonDocFragment"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/recycle_bin_icon_red" />

        <ImageButton
            android:id="@+id/editImageButtonDocFragment"
            android:layout_width="54dp"
            android:layout_height="56dp"
            android:layout_weight="0.03"
            android:background="@drawable/edit_image_button" />

    </LinearLayout>


</LinearLayout>