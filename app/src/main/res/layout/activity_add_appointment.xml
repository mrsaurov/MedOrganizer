<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.saurov.android.activities.AddAppointmentActivity">


    <TextView
        android:id="@+id/addDoctorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Add Appointment"
        android:textColor="@color/myBlueText"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/appointmentNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Appointment Name"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="29dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_clock_black_24dp" />

        <TextView
            android:id="@+id/appointmentTimeTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:hint="Time"
            android:textColorHint="@color/myBlueText"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/appointmentDateTextView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:hint="Date"
            android:textColorHint="@color/myBlueText"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_location_on_black_24dp" />

        <EditText
            android:id="@+id/appointmentLocationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Location" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="29dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_notes_black_24dp" />

        <EditText
            android:id="@+id/appointmentNoteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Notes"
            android:inputType="phone" />

    </LinearLayout>


    <Button
        android:id="@+id/saveAppointmentButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="SAVE" />

</LinearLayout>
